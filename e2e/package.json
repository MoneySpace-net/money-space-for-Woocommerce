{
  "name": "moneyspace-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for MoneySpace WooCommerce Payment Gateway",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:installment": "playwright test --grep=\"installment\"",
    "test:creditcard": "playwright test --grep=\"credit card\"",
    "test:qrcode": "playwright test --grep=\"qr code\"",
    "test:notices": "playwright test --grep=\"notices\"",
    "test:validation": "playwright test --grep=\"validation\""
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "woocommerce",
    "payment-gateway",
    "moneyspace",
    "playwright"
  ]
}
